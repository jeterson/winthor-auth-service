{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"      
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@useCase/*": [
        "src/useCases/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@config/*": ["src/config/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}